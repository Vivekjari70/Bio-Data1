@model Bio_Data.Models.ViewModel.BiodataViewModel


@{
    ViewData["Title"] = "PersonalDetailsCreate";
}

<div class="container">
    <div class="card">
        @*<div class="card-header">
                <p class="text-center text-danger">@TempData["message"]</p>
            </div>*@
        <div class="card-body">
            <form asp-action="SaveAllData" asp-controller="Biodata" id="tab1">
                <div class="row text-left">
                    <div class="col-6 ">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label><label>*</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Dateoftime" class="control-label">Date Of Birth</label><label>*</label>
                            <input asp-for="Dateoftime" class="form-control" placeholder="Enter Date Of Birth" />
                            <span asp-validation-for="Dateoftime" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row text-left">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="TimeOfBirth" class="control-label">Time Of Birth</label><label>*</label>
                            <input asp-for="TimeOfBirth" class="form-control" placeholder="Enter Time-Of-Birth" />
                            <span asp-validation-for="TimeOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="PlaceOfBirth" class="control-label">Place Of Birth</label><label>*</label>
                            <input type="text" asp-for="PlaceOfBirth" class="form-control" placeholder="Enter Place-Of-Birth" />
                            <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row text-left">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Rasi" class="control-label">Rashi</label><label>*</label>
                            <select type="text" asp-for="Rasi" class="form-control" asp-items="ViewBag.Rasi">
                                <option value="">-- Select Rashi --</option>
                                <option value="Mesh Rashi">Mesh Rashi</option>
                                <option value="Vrishabh Rashi">Vrishabh Rashi</option>
                                <option value="Mithun Rashi">Mithun Rashi</option>
                            </select>
                            <span asp-validation-for="Rasi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Nakshtra" class="control-label">Nakshtra</label><label>*</label>
                            <input type="text" asp-for="Nakshtra" class="form-control" placeholder="Enter Nakshtra" />
                            <span asp-validation-for="Nakshtra" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row text-left">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Complexion" class="control-label">Complexion</label><label>*</label>
                            <input type="text" asp-for="Complexion" class="form-control" placeholder="Enter Complexion" />
                            <span asp-validation-for="Complexion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Height" class="control-label">Height</label><label>*</label>
                            <input type="text" asp-for="Height" class="form-control" placeholder="Enter Height" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row text-left">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Education" class="control-label">Education</label><label>*</label>
                            <input type="text" asp-for="Education" class="form-control" placeholder="Enter Education" />
                            <span asp-validation-for="Education" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Cast" class="control-label">Cast</label><label>*</label>
                            <input type="text" asp-for="Cast" class="form-control" placeholder="Enter Cast" />
                            <span asp-validation-for="Cast" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group text-left">
                    <label asp-for="Job" class="control-label">Job</label><label>*</label>
                    <input type="text" asp-for="Job" class="form-control" placeholder="Enter Education" />
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Next" name="Command" class="btn btn-lg btn-outline-success float-right" />
                    <a asp-action="Index" asp-controller="Home" class="float-left">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

